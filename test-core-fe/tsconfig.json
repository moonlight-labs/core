{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "core-base-fe": ["../core-base-fe/src/core-base"],
      "core-accounting-fe": ["../core-accounting-fe/src/core-accounting"],
      "core-jobs-fe": ["../core-jobs-fe/src/core-jobs"],
      "core-comments-fe": ["../core-comments-fe/src/core-comments"],
      "core-versions-fe": ["../core-versions-fe/src/core-versions"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
